<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_settings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<TextView
		android:id="@+id/title_text"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/element_text_title"
	    android:gravity="center_vertical"
	    android:paddingBottom="8dp"
	    android:paddingLeft="10dp"
	    android:paddingTop="8dp"
	    android:text="Good Luck with TOEFL - Settings"
	    android:textColor="#ffffff"
	    android:textSize="15sp"
	    android:textStyle="bold" />
		<View
			android:id="@+id/view_seperator_1"
		    android:background="#223344"
		    android:layout_width="fill_parent"
		    android:layout_height="1dp" />
		
	<ScrollView
    	android:id="@+id/scrollView"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:padding="10dp" >
    	
    	<LinearLayout
    	    android:id="@+id/LinearLayout_all"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="vertical" >

	    	<LinearLayout
	    	    android:id="@+id/LinearLayout_soundVolume_title"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="wrap_content"
	    	    android:orientation="horizontal" >
	    	    
	        	<ImageView
	        	    android:id="@+id/imageView_soundVolume"
	        	    android:layout_width="26dp"
	        	    android:layout_height="26dp"
	        	    android:contentDescription="@string/empty"
	        	    android:src="@drawable/sound_volume" />

	        	<TextView
	        	    android:id="@+id/textView_soundVolume"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="3dp"
	        	    android:padding="3dp"
	        	    android:text="Sound Volume"
	        	    android:textSize="15sp" />

	        	<SeekBar
	        	    android:id="@+id/volume_input"
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="10dp"
	        	    android:layout_weight="1"
	        	    android:max="100"
	        	    android:maxHeight="16dip"
	        	    android:minHeight="16dip"
	        	    android:paddingLeft="3dp"
	        	    android:paddingRight="3dp"
	        	    android:progress="50" />

		    </LinearLayout>

	    	<TextView
	    	    android:id="@+id/author"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="5dp"
	    	    android:text="By clicking on the volume bar, you can adjust the sound volume."
	    	    android:textAppearance="?android:attr/textAppearanceSmall"
	    	    android:textSize="10sp" />

			<View
			    android:id="@+id/view_seperator_2"
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:layout_marginBottom="20dp"
			    android:layout_marginTop="20dp"
			    android:background="#223344" />
	    	<LinearLayout
	    	    android:id="@+id/LinearLayout_fontSize_title"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="wrap_content"
	    	    android:orientation="horizontal" >
	    	    
	        	<ImageView
	        	    android:id="@+id/imageView_fontSize"
	        	    android:layout_width="18dp"
	        	    android:layout_height="18dp"
	        	    android:layout_marginLeft="4dp"
	        	    android:layout_marginRight="4dp"
	        	    android:layout_marginTop="4dp"
	        	    android:contentDescription="@string/empty"
	        	    android:src="@drawable/font_size" />

	        	<TextView
	        	    android:id="@+id/textView_fontSize"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="3dp"
	        	    android:padding="3dp"
	        	    android:text="Font Size"
	        	    android:textSize="15sp" />

	        	<RadioGroup
	        	    android:id="@+id/radioFontSize"
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="30dp"
	        	    android:gravity="right"
	        	    android:orientation="horizontal" >

	        	    <RadioButton
	        	        android:id="@+id/radioButton_font_size_normal"
	        	        android:layout_width="wrap_content"
	        	        android:layout_height="wrap_content"
	        	        android:layout_marginRight="10dp"
	        	        android:checked="true"
	        	        android:text="Normal"
	        	        android:textSize="14sp" />

	        	    <RadioButton
	        	        android:id="@+id/radioButton_font_size_large"
	        	        android:layout_width="wrap_content"
	        	        android:layout_height="wrap_content"
	        	        android:layout_marginRight="5dp"
	        	        android:text="Large"
	        	        android:textSize="14sp" />

	        	</RadioGroup>

		    </LinearLayout>
	    	<TextView
	    	    android:id="@+id/author"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="5dp"
	    	    android:text="There are two different font size for showing the contents of this application. You can select Normal or Large mode to see the words better."
	    	    android:textAppearance="?android:attr/textAppearanceSmall"
	    	    android:textSize="10sp" />

			<View
			    android:id="@+id/view_seperator_3"
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:layout_marginBottom="20dp"
			    android:layout_marginTop="20dp"
			    android:background="#223344" />

			<CheckBox
			    android:id="@+id/notification_input"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:checked="true"
			    android:text="Enable notification system" />
	    	<TextView
	    	    android:id="@+id/author"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="5dp"
	    	    android:text="By enabling the notification system, you receive some notifications during the day. They mostly include famous terms from distinguished people in order to encourage you to study more."
	    	    android:textAppearance="?android:attr/textAppearanceSmall"
	    	    android:textSize="10sp" />

		<View
		    android:id="@+id/view_seperator_3"
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:layout_marginBottom="20dp"
		    android:layout_marginTop="20dp"
		    android:background="#223344" />

		<Button
		    android:id="@+id/button_removeFavorites"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:background="@drawable/element_challenge_answer"
		    android:text="Remove Favorites" />

		<Button
		    android:id="@+id/button_clearScores"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:background="@drawable/element_challenge_answer"
		    android:text="Clear Scores" />
		
		<Button
		    android:id="@+id/button_thanks"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:background="@drawable/element_challenge_answer"
		    android:text="Send Feedback" />

    	</LinearLayout>
	</ScrollView>
 </LinearLayout>